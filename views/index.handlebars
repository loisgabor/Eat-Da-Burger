<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Chonburi&family=Abril+Fatface&display=swap" rel="stylesheet">


<h1>Eat-Da-Burger!</h1>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <p class="burger-name" for="ca">Burger Name:</p>
    <input type="text" id="ca" name="name">
      <button class="submit btn btn-success" type="submit">Add Burger</button>
  </div>



</form>
{{!-- <div class="row"> --}}
  <div class="column">
    <h2>Burger</h2>

    <ul>
      {{#each burger}}
      {{#unless isDevoured}}
      <li>{{name}} <button class="devour" data-id="{{id}}">Devour it!</button></li>

      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="column">
    <h2>Eaten Burgers</h2>

    <ul>
      {{#each burger}}
      {{#if isDevoured}}
      <li>{{name}} <button class="delete-burger" data-id="{{id}}">Delete!</button></li>
      {{/if}}
      {{/each}}
    </ul>
  {{!-- </div> --}}
</div>