<h1>Burgers!</h1>

<h2>Burger</h2>

<ul>
  {{#each burger}}
  {{#unless isDevoured}}
  {{name}}
  <button class="devour" data-id="{{id}}">Devour it!</button>
  {{/unless}}
  {{/each}}
</ul>

<h2>Eaten Burgers</h2>

<ul>
  {{#each burger}}
  {{#if isDevoured}}
  {{name}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button class="submit" type="submit">Add Burger</button>
</form>